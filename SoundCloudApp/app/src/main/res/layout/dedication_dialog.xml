<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/smiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sad" >
    </ImageView>

    <TextView
        android:id="@+id/no_dedicationTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smiley"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:text="@string/dedicationAlertOne_desc" >
    </TextView>

    <TextView
        android:id="@+id/no_dedicationOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_dedicationTwo"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:text="@string/dedicationAlertTwo_desc" >
    </TextView>

</RelativeLayout>