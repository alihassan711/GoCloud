<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#88000000" >
    
    <TextView
        android:id="@+id/textView_edit_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="EDIT TAGS"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        ></TextView>
    <LinearLayout 
        android:id="@+id/white_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_edit_tags"
        android:layout_marginTop="2dp"
        android:background="#ffffff"></LinearLayout>
    
	<LinearLayout 
	    android:id="@+id/title_layout"
	    android:layout_below="@+id/white_line"
	    android:layout_marginTop="5dp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="9dp"
	        android:text="Title"
	        android:textColor="#ffffff"
	    ></TextView>
	    <EditText 
	        android:id="@+id/editText_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="20dp"/>
	</LinearLayout>
		<LinearLayout 
	    android:id="@+id/artist_layout"
	    android:layout_below="@+id/title_layout"
	    android:layout_marginTop="10dp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/artist"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="9dp"
	        android:text="Artist"
	        android:textColor="#ffffff"
	    ></TextView>
	    <EditText 
	        android:id="@+id/editText_artist"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="13dp"/>
	</LinearLayout>
		<LinearLayout 
	    android:id="@+id/album_layout"
	    android:layout_below="@+id/artist_layout"
	    android:layout_marginTop="10dp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/album"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="9dp"
	        android:text="Album"
	        android:textColor="#ffffff"
	    ></TextView>
	    <EditText 
	        android:id="@+id/editText_album"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="8dp"/>
	</LinearLayout>
	
		<LinearLayout 
		    android:id="@+id/imageButtons"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/album_layout"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="30dp"
		    android:weightSum="1"
		    >
		    <ImageButton 
		        android:id="@+id/imageButton_ok"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:src="@drawable/dialog_icn_ok"
		        android:background="@android:color/transparent"
		        android:layout_margin="5dp"
		        android:layout_weight="0.5"
		       />
		        <ImageButton 
		        android:id="@+id/imageButton_cancel"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:src="@drawable/dialog_icn_cancel"
		        android:background="@android:color/transparent"
		        android:layout_weight="0.5"
		        android:layout_margin="5dp"
		        />
		</LinearLayout>
		


</RelativeLayout>
