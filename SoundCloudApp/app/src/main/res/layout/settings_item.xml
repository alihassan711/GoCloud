<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    
	<ImageView 
	    android:id="@+id/setting_imageView"
	    android:layout_height="50dp"
	    android:layout_width="50dp"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="5dp"
	 
	    
	    />
	<TextView 
	    android:id="@+id/setting_textView"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@+id/setting_imageView"
	    android:layout_marginLeft="15dp"
	    android:layout_centerVertical="true"
	    android:textSize="20sp"
	    android:textStyle="bold"
	    android:padding="10dp"
	    android:textColor="#ffffff"
	    android:text="HeadPhones"
	    />
	<CheckBox 
	    android:id="@+id/setting_checkBox"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="5dp"
	    android:button="@drawable/custom_checkbox_selector"
	    />
	
</RelativeLayout>
