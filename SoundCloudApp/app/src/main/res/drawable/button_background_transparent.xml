<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />

            <stroke android:width="1dp" android:color="#ffffff"></stroke>

            <gradient android:endColor="#88000000" android:startColor="#88000000" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />

            <stroke android:width="1dp" android:color="#ffffff"></stroke>

            <solid android:color="#006699" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />

            <stroke android:width="1dp" android:color="#ffffff"></stroke>

            <solid android:color="#00000000" />
        </shape></item>

</selector>